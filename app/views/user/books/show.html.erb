<!-- User Book Show Page -->

<article class="book">
  <%= render partial: 'partials/book_show', locals: {book: @book} %>
  <footer>
    <%= tag.p "Status: #{@book.find_status}" %>
    <%= button_to "Change Status", "/user/books/#{@book.id}", method: :patch %>
    <%= button_to "Remove Book", "/user/books/#{@book.id}", method: :delete %>
  </footer>
</article>
