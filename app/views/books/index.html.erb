<h1>Browse Books</h1>

<p>Find Books by Title</p>
<section class= 'search-books'>
  <%= form_tag books_search_index_path, method: :get do %>
  <%= search_field_tag :search,nil, placeholder: 'Enter keyword or ISBN'%><br>
  <%= submit_tag 'Find Books' %>
  <% end  %>
</section>

<p>Sorted by Friend</p>

<% @friends.each do |friend| %>
  <section class="friend-book-shelf">
    <% friend.books.each do |book| %>
      <div class="book">
        <%= link_to book.title, book_path(book, friend_id: friend.id) %>
        <%= book.author %>
        <%= book.category %>
        <%= render partial: '/partials/book_thumbnail', locals: { book: book } %>
      </div>
    <% end %>
  </section>
<% end %>
