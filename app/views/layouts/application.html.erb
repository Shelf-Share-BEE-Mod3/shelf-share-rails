<!DOCTYPE html>
<html>
  <head>
    <title>ShelfShare</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all' %>
    <%= javascript_include_tag 'application' %>
  </head>

  <body>
    <nav>
      <%= link_to "Home", root_path %>
      <%= link_to "Dashboard" %>
      <%= link_to "Find Books" %>
      <%= link_to "Friends" %>
      <%= link_to "My Books" %>
      <%= link_to "Account Info" %>
    </nav>
    <% flash.each do |name, msg| %>
      <div class= "<%=name%>-flash">
        <p><%= msg %></p>
      </div>
    <% end %>
    <%= yield %>
  </body>
</html>
