<h2>All Borrowed Books</h2>

<!-- Userbooks where current_user is currently borrowing -->
<!-- Convert userbook to book to show cover -->
<!-- Need book owner info from userbook for return path -->
<!-- userbook.book -->
<!-- borrow_request.user_book.book -->
<% @borrow_requests.each do |br| %>
<div class="borrowed-books" id="borrow-<%= br.id %>">
  <% book = br.user_book.book %>
  <%= render partial: '/partials/book_thumbnail', locals: { book: book } %>
  <%= button_to "Return", "/return/#{br.user_book.user_id}", params:{user_book_id: br.user_book.id, borrow_request_id: br.id}, method: :get %>
</div>
<% end %>
